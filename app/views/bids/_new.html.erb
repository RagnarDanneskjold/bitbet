<h3>Umieść swój zakład</h3>
<div class="filter">
	<%= render partial: "bets/mini_info", locals: { bet: @bet } %>
</div>
<%= form_for [@bet, @bid] do |f| %>
	<%= render 'shared/error_messages', :object => @bid %>
	<input type="hidden" name="bid[user_id]" value="1">
	<div class="field">
		<%= f.label :amount, "Twój zakład:", class: "control-label" %>
		<%= f.text_field :amount %> BTC
	</div>
	<div class="field">
		<label class="control-label"> </label>
    	<%= f.radio_button(:positive, "1", :checked => @bid.positive ) %>
		<%= label_tag(:positive_1, "ZA", { class: "control-radio-label" } ) %>
		<%= f.radio_button(:positive, "0", :checked => (!@bid.positive.nil? && !@bid.positive) ) %>
		<%= label_tag(:positive_0, "PRZECIW", { class: "control-radio-label" } ) %>
	</div>
	<div class="actions">
		<%= f.submit "Obstawiaj" %>
	</div>
<% end %>