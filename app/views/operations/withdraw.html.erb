<h1><%= t 'views.operations.withdraw.title' %></h1>
<p><%= t 'available_funds' %>: <%= view_as_btc(current_user.available_funds, 5) %> BTC</p>
<%= form_for @operation do |f| %>
	<%= render 'shared/error_messages', :object => @operation %>
	<div class="field">
		<%= f.label :amount_in_stc, class: "control-label" %>
		<%= f.text_field :amount_in_stc %> BTC
	</div>
	<div class="actions">
		<%= f.submit t 'views.operations.withdraw.submit_button' %>
	</div>
<% end %>
